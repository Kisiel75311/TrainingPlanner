<!DOCTYPE html>
<html>
  <head>
    <ul>
      <li><%= link_to "Strona główna", root_path %></li>
      <li><%= link_to "Użytkownicy", users_path %></li>
      <li><%= link_to "Plany", plans_path %></li>
      <li>
      <% if logged_in? %>
        Zalogowany jako <%= current_user.first_name %> <%= current_user.last_name %>
        <%= link_to "Profil", current_user %>
        <%= link_to "Wyloguj", logout_path, method: :delete %>
      <% else %>
        <%= link_to "Zaloguj", login_path %>
      <% end %>

    </ul>

    <title>TrainingPlanner</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>


  </body>
</html>
